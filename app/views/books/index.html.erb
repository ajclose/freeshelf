<h1>Books!</h1>

<%= link_to 'Add Book', new_book_path %>

<table>
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Link</th>
  </thead>

  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.description %></td>
    <td><%= book.link %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Delete', book_path(book),
              method: :delete,
              data: { confirm: 'Are you delete this book?' } %></td>
  </tr>
  <% end %>
</table>
